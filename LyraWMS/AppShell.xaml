<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="LyraWMS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:LyraWMS.Views"
    xmlns:picklistsViews="clr-namespace:LyraWMS.Views.Picklists"
    xmlns:productsViews="clr-namespace:LyraWMS.Views.Products"
    FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Dashboard" Icon="home.png">
            <ShellContent
                Title="Dashboard"
                ContentTemplate="{DataTemplate views:Dashboard}"
                Route="Dashboard" />
        </Tab>
        
        <Tab Title="Picklists" Icon="picklists.png">
            <ShellContent
                Title="Picklists"
                ContentTemplate="{DataTemplate picklistsViews:ListPage}"
                Route="PicklistsListPage" />
        </Tab>
        
        <Tab Title="Producten" Icon="products.png">
            <ShellContent
                Title="Producten"
                ContentTemplate="{DataTemplate productsViews:ListPage}"
                Route="ProductsListPage" />
        </Tab>
    </TabBar>
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
</Shell>